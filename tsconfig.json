{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "allowJs": true,
    "emitDeclarationOnly": false,
    "lib": ["DOM", "ESNext"],
    "outDir": "dist",
    "skipLibCheck": true,
    "types": ["node", "vite-plugin-pwa/client"],
    "downlevelIteration": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "vite.config.ts"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
